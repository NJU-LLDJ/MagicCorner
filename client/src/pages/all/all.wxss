#contain {
  background-color: #fafafa;
}

/*搜索*/
.container_search{  
  margin-top: 40rpx;
	display: flex;  
	flex-direction: row; 
  height: 80rpx;
  width: 750rpx;
  background-color: white;
}  

.search {  
	border: 1px solid #d0d0d0;  
	border-radius: 10rpx;  
  margin-left: 5%;
  margin-right: 5%;  
  width: 90%;
	height: 60rpx;  
}  

.search input{  
	margin-left: 60rpx;  
	border-radius: 5px;  
}  

.searchicon {  
  margin-left: 20rpx;
  margin-top: 5rpx;
	position: absolute;  
	left:25rpx;  
	z-index: 2;  
	width: 20px;  
	height: 20px;  
	text-align: center;  
}  


.container3 {
	border: 1rpx black;
}

.container3 view {
  text-align: center;
	height: 100rpx;
}

/*图书样式*/ 
.books_container {
  display: flex;
  flex-wrap: wrap;
  margin-left: 5rpx;
}

.book {
  width: 360rpx;
  height: 536rpx;
  display: flex;
  flex-direction: column;
  margin: 20rpx 5rpx 20rpx 5rpx;
  align-items: center;
  background-color: white;
}

.book image {
  margin-top: 30rpx;
  width: 335rpx;
  height: 450rpx;
  border-radius: 20rpx;
}
.bookname {
  margin: 25rpx;
}