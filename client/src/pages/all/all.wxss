#contain {
  background-color: #fafafa;
}

/*搜索*/
.container_search{  
  margin-top: 40rpx;
	display: flex;  
	flex-direction: row; 
  height: 80rpx;
  width: 750rpx;
  background-color: white;
}  

.search {  
	border: 1px solid #d0d0d0;  
	border-radius: 10rpx;  
  margin-left: 5%;
  margin-right: 5%;  
  width: 90%;
	height: 60rpx;  
}  

.search input{  
	margin-left: 60rpx;  
	border-radius: 5px;  
}  

.searchicon {  
  margin-left: 20rpx;
  margin-top: 5rpx;
	position: absolute;  
	left:25rpx;  
	z-index: 2;  
	width: 20px;  
	height: 20px;  
	text-align: center;  
}  

/*轮播图*/
.container3 {
  border: 2px solid #fafafa;  
}

.container3 swiper-item {
  text-align: center;
	height: 150rpx;
}

/*分类滚动条*/
.scroll_container {
  height: 100rpx;
  display: flex;
  white-space: nowrap;
  align-items: center;
  background-color: white;
}

.scroll_text {
  display: inline-block;
  margin-left: 5%;
  margin-right: 5%;
  height: 100rpx;
  line-height: 100%;
  text-align: center;
}

/*图书样式*/ 
.books_container {
  display: flex;
  flex-wrap: wrap;
  margin-left: 5rpx;
}

.book {
  width: 360rpx;
  height: 536rpx;
  display: flex;
  flex-direction: column;
  margin: 20rpx 5rpx 20rpx 5rpx;
  align-items: center;
  background-color: white;
}

.book image {
  margin-top: 30rpx;
  width: 335rpx;
  height: 450rpx;
  border-radius: 20rpx;
}
.bookname {
  margin: 25rpx;
  text-align: center;
  width: 80%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}